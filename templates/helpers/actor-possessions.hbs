<ol class="items-list">
	{{#each Possessions as |Possessions Category|}}
		<li class="item flexrow items-header">
			<div class="item-name">{{Category}}</div>
			<div class="item-attacktype">Attack Type</div>
			<div class="item-statroll">üé≤</div>
			<div class="item-actionslot">‚è±</div>
			<div class="item-range">üìè</div>
			{{#if ../isGM}}
			<div class="item-controls"><i class="fa-duotone fa-gears"></i></div>
			{{/if}}
		</li>
		{{#each Possessions as |item id|}}
			<li class="item flexrow" data-item-id="{{item._id}}">
				<div class="item-name flexrow">
					<div class="item-image">
						<img src="{{item.img}}" title="{{item.name}}" width="30" height="30" style="border: none" />
					</div>
					<h4>
						<div class="item-control item-edit" title="Possession Details">
							{{item.name}}
						</div>
					</h4>
				</div>
				<div class="item-attacktype item-prop">{{item.system.AttackType.value}}</div>
				<div class="item-statroll style-pos-rolls" data-roll-type="Possession"
					data-stat="{{item.system.StatRolled.value}}" data-item-name="{{item.name}}">
					{{item.system.StatRolled.value}}: {{lookup ../../system.RollStats item.system.StatRolled.value}}
				</div>
				<div class="item-actionslot item-prop">{{item.system.Usage.ActionSlot.value}}</div>
				<div class="item-range item-prop">{{item.system.Usage.Range.value}}</div>
				{{#if ../../isGM}}
				<div class="item-controls">
					<a class="item-control item-delete" title="Delete Possession"><i
							class="fa-duotone fa-trash"></i></a>
				</div>
				{{/if}}
			</li>
		{{/each}}
	{{/each}}
</ol>