<ol class="items-list">
	{{#each Possessions as |Possessions Category|}}
		<li class="item flexrow items-header">
			<div class="item-name">{{Category}}</div>
			<div class="item-attacktype">Attack Type</div>
			<div class="item-statroll">🎲</div>
			<div class="item-actionslot">⏱</div>
			<div class="item-range">📏</div>
			<div class="item-areaeffect">🗺️</div>
			<div class="item-controls"><i class="fa-duotone fa-gears"></i></div>
		</li>
		{{#each Possessions as |item id|}}
			<li class="item flexrow" data-item-id="{{item._id}}">
				<div class="item-name flexrow">
					<div class="item-image">
						<img src="{{item.img}}" title="{{item.name}}" width="30" height="30" />
					</div>
					<h4>
						<div class="style-pos-rolls" data-roll-type="Possession"
							data-stat="{{item.system.StatRolled.value}}"
							data-posname="{{item.name}}"
							data-attacktype="{{item.system.AttackType.value}}"
							data-effect="{{item.system.EffectDescription.value}}"
							data-targets="{{item.system.Usage.Targets.value}}"
							data-damage="{{item.system.Effects.Damage.value}}"
							data-conditions="{{item.system.Effects.Conditions.value}}">{{item.name}}</div>
					</h4>
				</div>
				<div class="item-attacktype item-prop">{{item.system.AttackType.value}}</div>
				<div class="item-statroll item-prop">
					{{item.system.StatRolled.value}}: {{lookup ../../system.RollStats item.system.StatRolled.value}}
				</div>
				<div class="item-actionslot item-prop">{{item.system.Usage.ActionSlot.value}}</div>
				<div class="item-range item-prop">{{item.system.Usage.Range.value}}</div>
				<div class="item-areaeffect item-prop">{{item.system.Usage.AreaEffect.value}}</div>
				<div class="item-controls">
					<a class="item-control item-edit" title="Possession Details"><i
							class="fa-duotone fa-message-pen"></i></a>
					<a class="item-control item-delete" title="Delete Possession"><i
							class="fa-duotone fa-trash"></i></a>
				</div>
			</li>
		{{/each}}
	{{/each}}
</ol>