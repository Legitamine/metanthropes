<div class="layout-container-grid3x5-cs style-container-grid3x4">
	{{#each system.Characteristics}}
		<div class="layout-container-stats style-container-stats">
			<div class="style-cs-chars-label">{{@key}}</div>
			<div class="layout-container-grid3x1-cs">
				<div class="style-cs-values">
					<p class="style-cs-values">🏁
						<input class="style-container-input-charstat" name="system.Characteristics.{{@key}}.Initial"
							type="number" value="{{this.Initial}}" data-dtype="Number" />
					</p>
					<p class="style-cs-values">📈 <select name="system.Characteristics.{{@key}}.Progressed"
							id="system.Characteristics.{{@key}}.Progressed" data-dtype="Number">
							<option value="0" {{selected this.Progressed 0}}>0</option>
							<option value="1" {{selected this.Progressed 1}}>1</option>
							<option value="2" {{selected this.Progressed 2}}>2</option>
							<option value="3" {{selected this.Progressed 3}}>3</option>
							<option value="4" {{selected this.Progressed 4}}>4</option>
							<option value="5" {{selected this.Progressed 5}}>5</option>
						</select>
					</p>
				</div>
				<div class="style-cs-chars-value">{{this.Current}}</div>
				<div>
					<p class="style-cs-buffs">🛡️ <select class="style-cs-buffs" name="system.Characteristics.{{@key}}.Buff.Current"
							id="system.Characteristics.{{@key}}.Buff.Current" data-dtype="Number">
							<option value="0" {{selected Buff.Current 0}}>0</option>
							<option value="1" {{selected Buff.Current 1}}>1</option>
							<option value="2" {{selected Buff.Current 2}}>2</option>
							<option value="3" {{selected Buff.Current 3}}>3</option>
							<option value="4" {{selected Buff.Current 4}}>4</option>
							<option value="5" {{selected Buff.Current 5}}>5</option>
						</select><label
							for="system.Characteristics.{{@key}}.Buff.Current">{{this.Buff.Name}}</label>
					</p>
					<p class="style-cs-conditions">💀 <select class="style-cs-conditions" name="system.Characteristics.{{@key}}.Condition.Current"
							id="system.Characteristics.{{@key}}.Condition.Current" data-dtype="Number">
							<option value="0" {{selected this.Condition.Current 0}}>0</option>
							<option value="1" {{selected this.Condition.Current 1}}>1</option>
							<option value="2" {{selected this.Condition.Current 2}}>2</option>
							<option value="3" {{selected this.Condition.Current 3}}>3</option>
							<option value="4" {{selected this.Condition.Current 4}}>4</option>
							<option value="5" {{selected this.Condition.Current 5}}>5</option>
						</select><label
							for="system.Characteristics.{{@key}}.Condition.Current">{{this.Condition.Name}}</label>
					</p>
				</div>
			</div>
		</div>
		{{#each Stats}}
			<div class="layout-container-stats style-container-stats">
				<div class="style-cs-stats-label">{{@key}}</div>
				<div class="layout-container-grid3x1-cs">
					<div class="style-cs-values">
						<p class="style-cs-values">🏁
							<input class="style-container-input-charstat"
								name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Initial" type="number"
								value="{{this.Initial}}" data-dtype="Number" />
						</p>
						<p class="style-cs-values">📈 <select name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Progressed"
							id="system.Characteristics.{{@../key}}.Stats.{{@key}}.Progressed" data-dtype="Number">
							<option value="0" {{selected this.Progressed 0}}>0</option>
							<option value="1" {{selected this.Progressed 1}}>1</option>
							<option value="2" {{selected this.Progressed 2}}>2</option>
							<option value="3" {{selected this.Progressed 3}}>3</option>
							<option value="4" {{selected this.Progressed 4}}>4</option>
							<option value="5" {{selected this.Progressed 5}}>5</option>
						</select>
						</p>
					</div>
					<div class="style-cs-rolls" data-roll-type="Stat" data-stat="{{@key}}">
						{{this.Roll}}
					</div>
					<div>
						<p class="style-cs-buffs">🛡️ <select class="style-cs-buffs" name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Buff.Current"
							id="system.Characteristics.{{@../key}}.Stats.{{@key}}.Buff.Current" data-dtype="Number">
							<option value="0" {{selected this.Buff.Current 0}}>0</option>
							<option value="1" {{selected this.Buff.Current 1}}>1</option>
							<option value="2" {{selected this.Buff.Current 2}}>2</option>
							<option value="3" {{selected this.Buff.Current 3}}>3</option>
							<option value="4" {{selected this.Buff.Current 4}}>4</option>
							<option value="5" {{selected this.Buff.Current 5}}>5</option>
						</select><label
								for="system.Characteristics.{{@../key}}.Stats.{{@key}}.Buff.Current">{{this.Buff.Name}}</label>
						</p>
						<p class="style-cs-conditions">💀 <select class="style-cs-conditions" name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Current"
							id="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Current" data-dtype="Number">
							<option value="0" {{selected this.Condition.Current 0}}>0</option>
							<option value="1" {{selected this.Condition.Current 1}}>1</option>
							<option value="2" {{selected this.Condition.Current 2}}>2</option>
							<option value="3" {{selected this.Condition.Current 3}}>3</option>
							<option value="4" {{selected this.Condition.Current 4}}>4</option>
							<option value="5" {{selected this.Condition.Current 5}}>5</option>
						</select><label
								for="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Name">{{this.Condition.Name}}</label>
						</p>
					</div>
				</div>
			</div>
		{{/each}}
		<div class="layout-container-grid2x2 style-container-stats">
			{{#each CoreConditions}}
				<div class="style-cs-conditions">💀 <select class="style-cs-conditions" name="system.Characteristics.{{@../key}}.CoreConditions.{{@key}}"
							id="system.Characteristics.{{@../key}}.CoreConditions.{{@key}}" data-dtype="Number">
							<option value="0" {{selected this 0}}>0</option>
							<option value="1" {{selected this 1}}>1</option>
							<option value="2" {{selected this 2}}>2</option>
							<option value="3" {{selected this 3}}>3</option>
							<option value="4" {{selected this 4}}>4</option>
							<option value="5" {{selected this 5}}>5</option>
						</select><label
						for="system.Characteristics.{{@../key}}.CoreConditions.{{@key}}">{{@key}}</label>
				</div>
			{{/each}}
		</div>
	{{/each}}
</div>