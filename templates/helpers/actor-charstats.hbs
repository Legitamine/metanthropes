								<option value="7" {{selected this.Buff.Current 7}}>7</option>
								<option value="8" {{selected this.Buff.Current 8}}>8</option>
								<option value="9" {{selected this.Buff.Current 9}}>9</option>
								<option value="10" {{selected this.Buff.Current 10}}>10</option>
							</select>
						</p>
						<p class="style-cs-conditions">💀 <label
								for="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Name">{{this.Condition.Name}}</label>
						</p>
						<p class="style-cs-conditions"><select class="style-cs-conditions" title="Condition Level"
								name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Current"
								id="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Current"
								data-dtype="Number">
								<option value="0" {{selected this.Condition.Current 0}}>0</option>
								<option value="1" {{selected this.Condition.Current 1}}>1</option>
								<option value="2" {{selected this.Condition.Current 2}}>2</option>
								<option value="3" {{selected this.Condition.Current 3}}>3</option>
								<option value="4" {{selected this.Condition.Current 4}}>4</option>
								<option value="5" {{selected this.Condition.Current 5}}>5</option>
							</select>
