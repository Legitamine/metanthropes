<div class="layout-container-grid3x5-cs style-container-grid3x4">
	{{#each system.Characteristics}}
		<div class="layout-container-stats style-container-stats">
			<div class="style-cs-chars-label">{{@key}}</div>
			<div class="layout-container-grid3x1 style-container-grid3x1">
				<div class="style-cs-values">
					<p>🏁
						<input name="system.Characteristics.{{@key}}.Initial" type="number" value="{{this.Initial}}"
							data-dtype="number" />
					</p>
					<p>📈
						<input name="system.Characteristics.{{@key}}.Progressed" type="number"
							value="{{this.Progressed}}" data-dtype="number" />
					</p>
				</div>
				<div class="style-cs-chars-value">{{this.Current}}</div>
				<div>
					<p class="style-cs-buffs">🛡️
						<input class="style-cs-buffs" name="system.Characteristics.{{@key}}.Buff.Current" type="number"
							value="{{this.Buff.Current}}" data-dtype="number" /><label
							for="system.Characteristics.{{@key}}.Buff.Current">{{this.Buff.Name}}</label>
					</p>
					<p class="style-cs-conditions">💀
						<input class="style-cs-conditions" name="system.Characteristics.{{@key}}.Condition.Current"
							type="number" value="{{this.Condition.Current}}" data-dtype="number" /><label
							for="system.Characteristics.{{@key}}.Condition.Current">{{this.Condition.Name}}</label>
					</p>
				</div>
			</div>
		</div>
		<div class="layout-container-grid2x2 style-container-stats">
			{{#each CoreConditions}}
				<div class="style-cs-conditions">💀<input class="style-cs-conditions"
						name="system.Characteristics.{{@../key}}.CoreConditions.{{@key}}" type="number" value="{{this}}"
						data-dtype="number" /><label
						for="system.Characteristics.{{@../key}}.CoreConditions.{{@key}}">{{@key}}</label>
				</div>
			{{/each}}
		</div>
		{{#each Stats}}
			<div class="layout-container-stats style-container-stats">
				<div class="style-cs-stats-label">{{@key}}</div>
				<div class="layout-container-grid3x1 style-container-grid3x1">
					<div class="style-cs-values">
						<p>🏁
							<input name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Initial" type="number"
								value="{{this.Initial}}" data-dtype="number" />
						</p>
						<p>📈
							<input name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Progressed" type="number"
								value="{{this.Progressed}}" data-dtype="number" />
						</p>
					</div>
					<div class="style-cs-rolls" data-roll="1d100" data-statroll="{{this.Roll}}" data-label="{{@key}}">
						{{this.Roll}}</div>
					<div>
						<p class="style-cs-buffs">🛡️
							<input class="style-cs-buffs"
								name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Buff.Current" type="number"
								value="{{this.Buff.Current}}" data-dtype="number" /> <label
								for="system.Characteristics.{{@../key}}.Stats.{{@key}}.Buff.Current">{{this.Buff.Name}}</label>
						</p>
						<p class="style-cs-conditions">💀
							<input class="style-cs-conditions"
								name="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Current" type="number"
								value="{{this.Condition.Current}}" data-dtype="number" /> <label
								for="system.Characteristics.{{@../key}}.Stats.{{@key}}.Condition.Name">{{this.Condition.Name}}</label>
						</p>
					</div>
				</div>
			</div>
		{{/each}}
	{{/each}}
</div>