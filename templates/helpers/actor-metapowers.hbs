<ol class="items-list">
	{{#each Metapowers as |Metapowers metapowerLevel|}}
		<li class="item-list flexrow items-header">
			<div class="item-name" data-tooltip="Metapower Level">⏫: {{metapowerLevel}}</div>
			<div class="item-statroll meta-ui-responsive meta-ui-hide-at-minimum"
				data-tooltip="Stat Rolled to activate this Metapower">🎲</div>
			<div class="item-vsroll meta-ui-responsive meta-ui-extra-fields"
				data-tooltip="Stat Rolled against activating this Metapower">🆚</div>
			<div class="item-destinycost meta-ui-responsive meta-ui-extra-fields"
				data-tooltip="Destiny Cost to activate this Metapower">🤞</div>
			<div class="item-actionslot meta-ui-responsive meta-ui-hide-at-minimum"
				data-tooltip="Which part of my turn does it take to activate this Metapower">⏱</div>
			<div class="item-targets meta-ui-responsive meta-ui-hide-at-medium"
				data-tooltip="The Number of Targets of this Metapower">🎯</div>
			<div class="item-duration meta-ui-responsive meta-ui-hide-at-medium"
				data-tooltip="The Duration of this Metapower">⏳</div>
			<div class="item-range meta-ui-responsive meta-ui-extra-fields"
				data-tooltip="The Range of this Metapower">📏</div>
			<div class="item-area meta-ui-responsive meta-ui-extra-fields"
				data-tooltip="The Area of Effect Range of this Metapower">🗺️</div>
			{{#if ../isNarrator}}
				<div class="item-controls meta-ui-responsive meta-ui-hide-at-medium"><i
						class="fa-duotone fa-gears"></i></div>
			{{/if}}
		</li>
		{{#each Metapowers as |item id|}}
			<li class="item flexrow" data-item-id="{{item._id}}">
				<div class="item-name flexrow">
					<div class="item-image">
						<img class="style-mp-rolls" data-roll-type="Metapower"
							data-item-name="{{item.name}}"
							data-stat="{{item.system.Execution.StatRolled.value}}"
							data-destiny-cost="{{item.system.DestinyCost.value}}"
							src="{{item.img}}"
							data-tooltip="Click to Activate<br><br>{{item.system.MetapowerName.value}} - {{item.name}}<br><br>Right Click for Custom Roll"
							width="50" height="50" style="border: none" />
					</div>
					<h4>
						<div class="item-control item-edit style-view-properties"
							data-tooltip="Click to open {{item.name}}<br><br>Effect: {{stripHtml item.system.Effects.EffectDescription.value}}">
							{{item.name}}
						</div>
					</h4>
				</div>
				<div class="item-statroll item-prop meta-ui-responsive meta-ui-hide-at-minimum">
					<span class="meta-ui-responsive meta-ui-hide-at-medium">{{item.system.Execution.StatRolled.value}}:
					</span>
					{{lookup ../../system.RollStats item.system.Execution.StatRolled.value}}
				</div>
				<div class="item-vsroll item-prop meta-ui-responsive meta-ui-extra-fields">
					{{item.system.Effects.VSStatRoll.value}}
				</div>
				<div class="item-destinycost item-prop meta-ui-responsive meta-ui-extra-fields">
					{{item.system.DestinyCost.value}}
				</div>
				<div class="item-actionslot item-prop meta-ui-responsive meta-ui-hide-at-minimum">
					{{item.system.Execution.ActionSlot.value}}
				</div>
				<div class="item-targets item-prop meta-ui-responsive meta-ui-hide-at-medium">
					{{item.system.Execution.Targets.value}}
				</div>
				<div class="item-duration item-prop meta-ui-responsive meta-ui-hide-at-medium">
					{{item.system.Execution.Duration.value}}
				</div>
				<div class="item-range item-prop meta-ui-responsive meta-ui-extra-fields">
					{{item.system.Execution.Range.value}}
				</div>
				<div class="item-area item-prop meta-ui-responsive meta-ui-extra-fields">
					{{item.system.Execution.AreaEffect.value}}
				</div>
				{{#if ../../isNarrator}}
					<div class="item-controls meta-ui-responsive meta-ui-hide-at-medium">
						<a class="item-control item-delete" data-tooltip="Remove Metapower"><i
								class="fa-duotone fa-trash"></i></a>
					</div>
				{{/if}}
			</li>
		{{/each}}
	{{/each}}
</ol>