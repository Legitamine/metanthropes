<ol class="items-list">
	{{#each Metapowers as |Metapowers metapowerLevel|}}
		<li class="item flexrow items-header">
			<div class="item-name">‚è´: {{metapowerLevel}}</div>
			<div class="item-mpname">Metapower</div>
			<div class="item-destinycost">ü§û</div>
			<div class="item-statroll">üé≤</div>
			<div class="item-actionslot">‚è±</div>
			<div class="item-controls"><i class="fa-thin fa-gears"></i></div>
		</li>
		{{#each Metapowers as |item id|}}
			<li class="item flexrow" data-item-id="{{item._id}}">
				<div class="item-name flexrow">
					<div class="item-image">
						<a class="style-cs-rolls" data-roll-type="Metapower"
							data-stat="{{item.system.Activation.StatRolled.value}}" data-mpname="{{item.name}}" data-destcost="{{item.system.Activation.DestinyCost.value}}" data-effect="{{item.system.Activation.Damage.value}}"><img src="{{item.img}}"
								title="{{item.name}}" width="26" height="26" /></a>
					</div>
					<h4>{{item.name}}</h4>
				</div>
				<div class="item-mpname item-prop">{{item.system.Activation.MetapowerName.value}}</div>
				<div class="item-destinycost item-prop">{{item.system.Activation.DestinyCost.value}}</div>
				<div class="item-statroll item-prop">
					{{item.system.Activation.StatRolled.value}}: {{lookup ../../system.RollStats item.system.Activation.StatRolled.value}}
				</div>
				<div class="item-actionslot item-prop">{{item.system.Activation.ActionSlot.value}}</div>
				<div class="item-controls">
					<a class="item-control item-edit" title="Open Metapower"><i class="fa-thin fa-message-pen"></i></a>
					<a class="item-control item-delete" title="Delete Metapower"><i class="fa-thin fa-trash"></i></a>
				</div>
			</li>
		{{/each}}
	{{/each}}
</ol>