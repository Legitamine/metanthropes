<div class="layout-container-outer-charstatsprogression style-container-outer-charstatsprogression">
	{{#each actor.system.Characteristics}}
		<div class="layout-container-stats style-container-stats">
			<div class="style-cs-chars-label" data-tooltip="{{this.Title}}">{{@key}}</div>
			<div class="layout-container-grid3x1-cs">
				<div class="style-cs-values">
					<p class="style-cs-values" data-tooltip="Initial value">🏁
						{{this.Initial}}
					</p>
				</div>
				<div class="style-cs-chars-value">{{this.ProgressionBase}}</div>
				<div class="style-cs-values">
					<p class="style-cs-values" data-tooltip="Progression Level">📈 <select
							name="actor.system.Characteristics.{{@key}}.Progressed"
							id="actor.system.Characteristics.{{@key}}.Progressed" data-dtype="Number">
							<option value="0" {{selected this.Progressed 0}}>0</option>
							<option value="1" {{selected this.Progressed 1}}>1</option>
							<option value="2" {{selected this.Progressed 2}}>2</option>
							<option value="3" {{selected this.Progressed 3}}>3</option>
							<option value="4" {{selected this.Progressed 4}}>4</option>
							<option value="5" {{selected this.Progressed 5}}>5</option>
						</select>
					</p>
				</div>
			</div>
		</div>
		{{#each Stats}}
			<div class="layout-container-stats style-container-stats">
				<div class="style-cs-stats-label" data-tooltip="{{this.Title}}">{{@key}}</div>
				<div class="layout-container-grid3x1-cs">
					<div class="style-cs-values">
						<p class="style-cs-values" data-tooltip="Initial value">🏁
							{{this.Initial}}
						</p>
					</div>
					<div class="style-cs-stats-value">
						{{this.ProgressionRoll}}
					</div>
					<div class="style-cs-values">
						<p class="style-cs-values" data-tooltip="Progression Level">📈 <select
								name="actor.system.Characteristics.{{@../key}}.Stats.{{@key}}.Progressed"
								id="actor.system.Characteristics.{{@../key}}.Stats.{{@key}}.Progressed"
								data-dtype="Number">
								<option value="0" {{selected this.Progressed 0}}>0</option>
								<option value="1" {{selected this.Progressed 1}}>1</option>
								<option value="2" {{selected this.Progressed 2}}>2</option>
								<option value="3" {{selected this.Progressed 3}}>3</option>
								<option value="4" {{selected this.Progressed 4}}>4</option>
								<option value="5" {{selected this.Progressed 5}}>5</option>
							</select>
						</p>
					</div>
				</div>
			</div>
		{{/each}}
	{{/each}}
</div>