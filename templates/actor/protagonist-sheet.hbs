<form class="metanthropes {{cssClass}}" autocomplete="off">
	<header>
		<div class="layout-container-actorinfo style-container-actorinfo">
			{{#if system.metaowner.value}}
				<div class="layout-container-actorinfo-details">
					<img src="systems/metanthropes-system/artwork/Meta-Avatar-Rotating.gif" alt="Metanthropes RPG"
						title="Metanthropes RPG {{actor.type}}" height="85" width="85"
						style="border: none; border-radius: 50%" />
				</div>
				<div class="layout-container-actorinfo-details">
					<div class="style-actorinfo-tier3">
						Player
					</div>
					<div class="style-actorinfo-tier4">
						{{system.metaowner.value}}
					</div>
				</div>
				<div class="layout-container-actorinfo-details">
					<div class="style-actorinfo-tier2">
						{{actor.type}} ({{system.humanoids.genderpronoun.value}})
					</div>
					<div class="style-actorinfo-tier1">
						{{actor.name}}
					</div>
				</div>
				<div class="layout-container-actorinfo-details">
					<img src="{{actor.img}}" title="{{actor.name}}" height="85" width="70"
						style="border: none; border-radius: 15px" />
					<img src="{{actor.primeimg}}"
						alt="{{system.entermeta.primemetapower.value}}"
						title="Prime ‚ìÇÔ∏è Metapower: {{system.entermeta.primemetapower.value}}" height="85" width="85"
						style="border: none;" />
				</div>
				<div>
				</div>
			{{else}}
				<div></div>
				<div></div>
				<div>
					<button class="new-actor" title="Roll New {{actor.type}}">Roll New {{actor.type}}</button>
				</div>
			{{/if}}
		</div>
		<div class="layout-container-vitals style-container-vitals">
			<div>
				<div class="style-labels-text"
					title="Life represents a Character's overall health, vitality, and will to live. Metanthrope Characters have a Life total of (100 + their Endurance score). Metanthrope Characters also gain an additional +25 Life for every 5.000 Total Experience they have accumulated">
					‚ù§Ô∏è Life
					{{#if isGM}}
						<input name="system.Vital.Life.value" type="number" value="{{system.Vital.Life.value}}"
							data-dtype="Number" />
					{{else}}
						{{system.Vital.Life.value}}
					{{/if}}
					/{{system.Vital.Life.max}}
				</div>
			</div>
			<div>
				<div class="style-labels-text">{{system.Vital.Experience.Label}}: {{system.Vital.Experience.Total}}
					Spent:
					{{system.Vital.Experience.Spent}}
					{{#if isGM}} + <input name="system.Vital.Experience.Manual" type="number"
							value="{{system.Vital.Experience.Manual}}" data-dtype="Number" placeholder="0" /> {{/if}}
					Stored:{{#if (gte system.Vital.Experience.Stored 0)}}
						<span class="style-cs-positive">{{system.Vital.Experience.Stored}}</span>
					{{else}}
						<span class="style-cs-negative">{{system.Vital.Experience.Stored}}</span>
					{{/if}}
				</div>
			</div>
			<div>
				<div class="style-labels-text"
					title="Destiny (ü§û) is a resource which Players can spend to reroll any roll with an undesirable outcome, activate powerful Metapowered effects, and even save their Protagonists from dying">
					ü§û Destiny {{system.Vital.Destiny.value}}/{{system.Vital.Destiny.max}}
				</div>
			</div>
		</div>
	</header>
	<main>
		<div class="layout-container-nav style-container-nav">
			<nav class="style-container-nav-children csnavselector tabs" data-group="cs">
				<a class="item style-cs-labels" data-tab="cs-charstats">üìä Overview</a>
				<a class="item style-cs-labels" data-tab="cs-summary">‚úçÔ∏è Summary</a>
				<a class="item style-cs-labels" data-tab="cs-perks">üìö Perks</a>
				<a class="item style-cs-labels" data-tab="cs-metapowers">‚ìÇÔ∏è Metapowers</a>
				<a class="item style-cs-labels" data-tab="cs-combos">üîó Combos</a>
				<a class="item style-cs-labels" data-tab="cs-possessions">üõ†Ô∏è Possessions</a>
				<a class="item style-cs-labels" data-tab="cs-notes">üìì Notes</a>
			</nav>
		</div>
		<section class="csnavtabs">
			<div class="tab cs-charstats" data-group="cs" data-tab="cs-charstats">
				{{> "systems/metanthropes-system/templates/helpers/actor-charstats.hbs"}}
			</div>
			<div class="tab cs-summary" data-group="cs" data-tab="cs-summary">
				{{> "systems/metanthropes-system/templates/helpers/actor-summary.hbs"}}
			</div>
			<div class="tab cs-metapowers" data-group="cs" data-tab="cs-metapowers">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-metapowers.hbs"}}
				</div>
			</div>
			<div class="tab cs-combos" data-group="cs" data-tab="cs-combos">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					<br><br>
					<div class="resource-label">COMBOS are not officially supported yet. This is a placeholder for
						future capabilities.
					</div>
					{{> "systems/metanthropes-system/templates/helpers/actor-combos.hbs"}}
				</div>
			</div>
			<div class="tab cs-perks" data-group="cs" data-tab="cs-perks">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-perks.hbs"}}
				</div>
			</div>
			<div class="tab cs-possessions" data-group="cs" data-tab="cs-possessions">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-possessions.hbs"}}
				</div>
			</div>
			<div class="tab cs-notes" data-group="cs" data-tab="cs-notes">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-notes.hbs"}}
				</div>
			</div>
		</section>
	</main>
</form>