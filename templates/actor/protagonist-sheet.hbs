<form class="metanthropes {{cssClass}}" autocomplete="off">
	<header>
		<div class="layout-container-actorinfo style-container-actorinfo">
			{{#if system.metaowner.value}}
				<div class="layout-container-actorinfo-details">
					<div class="style-actorinfo-tier2">
						{{actor.type}}
					</div>
					<div class="style-actorinfo-tier1">
						{{actor.name}}
					</div>
				</div>
				<div class="style-cs-stats-label">
					<img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="85" width="85"
						style="cursor:pointer; border: none;" />
					<img src="systems/metanthropes-system/artwork/Meta-Avatar-Rotating.gif" alt="Metanthropes"
						title="Metanthropes RPG {{actor.type}}" height="85" width="85"
						style="border: none; border-radius: 80%" />
					<img src="systems/metanthropes-system/artwork/metapowers/{{system.entermeta.primemetapower.value}}.png"
						alt="{{system.entermeta.primemetapower.value}}"
						title="Prime Ⓜ️ Metapower: {{system.entermeta.primemetapower.value}}" height="85" width="85"
						style="border: none;" />
				</div>
				<div class="layout-container-actorinfo-details">
					<div class="style-actorinfo-tier2">
						Player
					</div>
					<div class="style-actorinfo-tier1">
						{{system.metaowner.value}}
					</div>
				</div>
			{{else}}
				<div></div>
				<div>
					<button class="new-actor" title=`Roll New {{actor.type}}`>Roll New {{actor.type}}</button>
				</div>
				<div></div>
			{{/if}}
		</div>
		<div class="layout-container-vitals style-container-vitals">
			<div>
				<div class="style-labels-text">
					❤️ Life
					<input name="system.Vital.Life.value" type="number" value="{{system.Vital.Life.value}}"
						data-dtype="Number" />/{{system.Vital.Life.max}}
				</div>
			</div>
			<div>
				<div class="style-labels-text">📈 Experience: {{system.Vital.Experience.Total}} Spent:
					{{system.Vital.Experience.Spent}} + <input name="system.Vital.Experience.Manual" type="number"
						value="{{system.Vital.Experience.Manual}}" data-dtype="Number" placeholder="0" />
					Stored:{{#if (gte system.Vital.Experience.Stored 0)}}
						<span class="style-cs-positive">{{system.Vital.Experience.Stored}}</span>
					{{else}}
						<span class="style-cs-negative">{{system.Vital.Experience.Stored}}</span>
					{{/if}}
				</div>
			</div>
			<div>
				<div class="style-labels-text">🤞 Destiny {{system.Vital.Destiny.value}}/{{system.Vital.Destiny.max}}
				</div>
			</div>
		</div>
	</header>
	<main>
		<div class="layout-container-nav style-container-nav">
			<nav class="style-container-nav-children csnavselector tabs" data-group="cs">
				<a class="item" data-tab="cs-charstats">📊 Overview</a>
				<a class="item" data-tab="cs-summary">✍️ Summary</a>
				<a class="item" data-tab="cs-perks">📚 Perks</a>
				<a class="item" data-tab="cs-metapowers">Ⓜ️ Metapowers</a>
				<a class="item" data-tab="cs-combos">🔗 Combos</a>
				<a class="item" data-tab="cs-possessions">🛠️ Possessions</a>
				<a class="item" data-tab="cs-notes">📓 Notes</a>
			</nav>
		</div>
		<section class="csnavtabs">
			<div class="tab cs-charstats" data-group="cs" data-tab="cs-charstats">
				{{> "systems/metanthropes-system/templates/helpers/actor-charstats.hbs"}}
			</div>
			<div class="tab cs-summary" data-group="cs" data-tab="cs-summary">
				{{> "systems/metanthropes-system/templates/helpers/actor-summary.hbs"}}
			</div>
			<div class="tab cs-metapowers" data-group="cs" data-tab="cs-metapowers">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-metapowers.hbs"}}
				</div>
			</div>
			<div class="tab cs-combos" data-group="cs" data-tab="cs-combos">
				COMBOS
				are not officially supported yet.
				This is a placeholder for future capabilities.
				{{> "systems/metanthropes-system/templates/helpers/actor-combos.hbs"}}
			</div>
			<div class="tab cs-perks" data-group="cs" data-tab="cs-perks">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-perks.hbs"}}
				</div>
			</div>
			<div class="tab cs-possessions" data-group="cs" data-tab="cs-possessions">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					{{> "systems/metanthropes-system/templates/helpers/actor-possessions.hbs"}}
				</div>
			</div>
			<div class="tab cs-notes" data-group="cs" data-tab="cs-notes">
				<div class="layout-container-outer-tabs style-container-outer-tabs">
					NOTES
					are partially implemented
					{{> "systems/metanthropes-system/templates/helpers/actor-notes.hbs"}}
				</div>
			</div>
		</section>
	</main>
</form>