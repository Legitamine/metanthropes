<form class="metanthropes {{cssClass}}" autocomplete="off">
	<header class="sheet-header">
		{{#if isGM}}
			<img class="metapower-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" style="border:none" />
		{{else}}
			<img class="metapower-img" src="{{item.img}}" title="{{item.name}}" style="border:none" />
		{{/if}}
		<div class="header-fields">
			<h1 class="charname">
				{{#if isGM}}
					<input name="name" type="text" value="{{item.name}}" placeholder="Metapower Name" />
				{{else}}
					{{item.name}}
				{{/if}}
			</h1>
			<div class="grid grid-2col">
				<div class="resource">
					<label class="resource-label" title="Which Stat is rolled when Activating this Metapower">üé≤
						Stat:</label>
					{{#if isGM}}
						<select name="system.Execution.StatRolled.value">
							{{#each system.Execution.StatRolled.options as |option|}}
								<option value="{{option}}"
									{{#if (eq option ../system.Execution.StatRolled.value)}}selected{{/if}}>{{option}}
								</option>
							{{/each}}
						</select>
						<span class="item-statroll style-mp-rolls" data-roll-type="Metapower"
							data-item-name="{{item.name}}" data-stat="{{item.system.Execution.StatRolled.value}}"
							data-destiny-cost="{{item.system.DestinyCost.value}}">
							{{item.system.Execution.StatRolled.value}}:
							{{lookup item.actor.system.RollStats item.system.Execution.StatRolled.value}}
						</span>
					{{else}}
						<span class="item-statroll style-mp-rolls" data-roll-type="Metapower"
							data-item-name="{{item.name}}" data-stat="{{item.system.Execution.StatRolled.value}}"
							data-destiny-cost="{{item.system.DestinyCost.value}}">
							{{item.system.Execution.StatRolled.value}}:
							{{lookup item.actor.system.RollStats item.system.Execution.StatRolled.value}}
						</span>
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label"
						title="Each Classification includes Metapowers which have a similar role and utilize capabilities and functions in a similar manner">üî£
						Classification:</label>
					{{#if isGM}}
						<select name="system.Classification.value">
							{{#each system.Classification.options as |option|}}
								<option value="{{option}}"
									{{#if (eq option ../system.Classification.value)}}selected{{/if}}>{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						{{system.Classification.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="The Name of the ‚ìÇÔ∏è Metapower">‚ìÇÔ∏è Metapower:</label>
					{{#if isGM}}
						<input type="text" name="system.MetapowerName.value" value="{{system.MetapowerName.value}}"
							data-dtype="String" />
					{{else}}
						{{system.MetapowerName.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label"
						title="Energy Type dictates the Damage and other properties of an effect">‚ú® Energy
						Type:</label>
					{{#if isGM}}
						<select name="system.EnergyType.value">
							{{#each system.EnergyType.options as |option|}}
								<option value="{{option}}"
									{{#if (eq option ../system.EnergyType.value)}}selected{{/if}}>
									{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						{{system.EnergyType.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="The Level of the Metapower">‚è´ Level:</label>
					{{#if isGM}}
						<select name="system.Level.value">
							{{#each system.Level.options as |option|}}
								<option value="{{option}}" {{#if (eq option ../system.Level.value)}}selected{{/if}}>
									{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						{{system.Level.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="The Destiny Cost to Activate this Metapower">ü§û Destiny
						Cost:</label>
					{{#if isGM}}
						<input type="number" name="system.DestinyCost.value" value="{{system.DestinyCost.value}}"
							data-dtype="Number" />
					{{else}}
						{{system.DestinyCost.value}}
					{{/if}}
				</div>
			</div>
		</div>
	</header>
	{{!-- Sheet Tab Navigation --}}
	<div class="layout-container-nav style-container-nav">
		<nav class="style-container-nav-children itemnavselector tabs" data-group="primary">
			<a class="item style-cs-labels" data-tab="description">Description</a>
			<a class="item style-cs-labels" data-tab="execution">Activation</a>
			<a class="item style-cs-labels" data-tab="effects">Effects</a>
			{{#if isGM}}
				<a class="item style-cs-labels" data-tab="results">Results</a>
			{{/if}}
		</nav>
	</div>
	{{!-- Sheet Body --}}
	<section class="itemnavtabs">
		{{!-- Description Tab --}}
		{{> "systems/metanthropes-system/templates/helpers/item-description.hbs"}}
		{{!-- Activation Tab --}}
		{{> "systems/metanthropes-system/templates/helpers/item-execution.hbs"}}
		{{!-- Effects Tab --}}
		{{> "systems/metanthropes-system/templates/helpers/item-effects.hbs"}}
	</section>
</form>