<form class="metanthropes {{cssClass}}" autocomplete="off">
	<header class="sheet-header">
		{{#if isGM}}
			<img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" style="border:none" />
		{{else}}
			<img class="profile-img" src="{{item.img}}" title="{{item.name}}" style="border:none" />
		{{/if}}
		<div class="header-fields">
			<h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Metapower Name" />
			</h1>
			<div class="grid grid-2col">
				<div class="resource">
					<label class="resource-label"
						title="Which Stat is rolled when Activating this Metapower.">üé≤:</label>
					<select name="system.Execution.StatRolled.value">
						{{#each system.Execution.StatRolled.options as |option|}}
							<option value="{{option}}"
								{{#if (eq option ../system.Execution.StatRolled.value)}}selected{{/if}}>{{option}}
							</option>
						{{/each}}
					</select>
				</div>
				<div class="resource">
					<label class="resource-label"
						title="Each Classification includes Metapowers which have a similar role and utilize capabilities and functions in a similar manner.">üî£:</label>
					<select name="system.Classification.value">
						{{#each system.Classification.options as |option|}}
							<option value="{{option}}"
								{{#if (eq option ../system.Classification.value)}}selected{{/if}}>{{option}}
							</option>
						{{/each}}
					</select>
				</div>
				<div class="resource">
					<label class="resource-label" title="The Name of the ‚ìÇÔ∏è Metapower">‚ìÇÔ∏è:</label>
					<input type="text" name="system.MetapowerName.value" value="{{system.MetapowerName.value}}"
						data-dtype="String" />
				</div>
				<div class="resource">
					<label class="resource-label"
						title="Energy Type dictates the Damage and other properties of an effect.">‚ú®:</label>
					<select name="system.EnergyType.value">
						{{#each system.EnergyType.options as |option|}}
							<option value="{{option}}" {{#if (eq option ../system.EnergyType.value)}}selected{{/if}}>
								{{option}}
							</option>
						{{/each}}
					</select>
				</div>
				<div class="resource">
					<label class="resource-label" title="The Level of the Metapower">‚è´:</label>
					<select name="system.Level.value">
						{{#each system.Level.options as |option|}}
							<option value="{{option}}" {{#if (eq option ../system.Level.value)}}selected{{/if}}>
								{{option}}
							</option>
						{{/each}}
					</select>
				</div>
				<div class="resource">
					<label class="resource-label" title="The Destiny Cost to Activate this Metapower">ü§û:</label>
					<input type="number" name="system.DestinyCost.value" value="{{system.DestinyCost.value}}"
						data-dtype="Number" />
				</div>
			</div>
		</div>
	</header>
	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="description">Description</a>
		<a class="item" data-tab="activation">Activation</a>
		<a class="item" data-tab="effects">Effects</a>
		<a class="item" data-tab="results">Results</a>
	</nav>
	{{!-- Sheet Body --}}
	<section class="sheet-body">
		{{!-- Description Tab --}}
		<div class="tab description" data-group="primary" data-tab="description">
			<div>{{system.Description.label}}:<br></div>
			{{#if isGM}}
				<div class="layout-editor">
					{{editor system.Description.value target="system.Description.value" button=true editable=true}}
				</div>
			{{else}}
				<div class="layout-editor">
					{{editor system.Description.value target="system.Description.value" button=false editable=false}}
				</div>
			{{/if}}
		</div>
		{{!-- Activation Tab --}}
		<div class="tab activation" data-group="primary" data-tab="activation">
			{{#each system.Execution}}
				{{#unless (or
					(eq @key "StatRolled")
					(eq @key "AdditionalInfo")
				)}}
					<div class="resource">
						<label class="resource-label">{{this.label}}:</label>
						{{#if this.options}}
							<select name="system.Execution.{{@key}}.value">
								{{#each this.options as |option|}}
									<option value="{{option}}" {{#if (eq option ../this.value)}}selected{{/if}}>
										{{option}}
									</option>
								{{/each}}
							</select>
						{{else}}
							<input type="{{this.type}}" name="system.Execution.{{@key}}.value" value="{{this.value}}"
								data-dtype="{{this.dtype}}" />
						{{/if}}
					</div>
				{{/unless}}
			{{/each}}
			<div><label class="resource-label">{{system.Execution.AdditionalInfo.label}}:</label></div>
			{{#if isGM}}
				<div class="layout-editor">
					{{editor system.Execution.AdditionalInfo.value target="system.Execution.AdditionalInfo.value" button=true editable=true}}
				</div>
			{{else}}
				<div class="layout-editor">
					{{editor system.Execution.AdditionalInfo.value target="system.Execution.AdditionalInfo.value" button=false editable=false}}
				</div>
			{{/if}}
		</div>
		{{!-- Effects Tab --}}
		<div class="tab effects" data-group="primary" data-tab="effects">
			<div>{{system.Effects.EffectDescription.label}}:<br></div>
			{{#if isGM}}
				<div class="layout-editor">
					{{editor system.Effects.EffectDescription.value target="system.Effects.EffectDescription.value" button=true editable=true}}
				</div>
			{{else}}
				<div class="layout-editor">
					{{editor system.Effects.EffectDescription.value target="system.Effects.EffectDescription.value" button=false editable=false}}
				</div>
			{{/if}}
			{{#each system.Effects}}
				{{#unless (or 
				(eq @key "EffectDescription")
				(eq @key "AdditionalInfo")
				(eq @key "Conditions")
				(eq @key "Buffs")
				(eq @key "Damage")
				(eq @key "Healing")
				(eq @key "Special")
				)}}
					<div class="resource">
						<label class="resource-label">{{this.label}}:</label>
						{{#if this.options}}
							<select name="system.Effects.{{@key}}.value">
								{{#each this.options as |option|}}
									<option value="{{option}}" {{#if (eq option ../this.value)}}selected{{/if}}>
										{{option}}
									</option>
								{{/each}}
							</select>
						{{else}}
							<input type="{{this.type}}" name="system.Effects.{{@key}}.value" value="{{this.value}}"
								data-dtype="{{this.dtype}}" />
						{{/if}}
					</div>
				{{/unless}}
			{{/each}}
			<div><label class="resource-label">{{system.Effects.AdditionalInfo.label}}:</label></div>
			{{#if isGM}}
				<div class="layout-editor">
					{{editor system.Effects.AdditionalInfo.value target="system.Effects.AdditionalInfo.value" button=true editable=true}}
				</div>
			{{else}}
				<div class="layout-editor">
					{{editor system.Effects.AdditionalInfo.value target="system.Effects.AdditionalInfo.value" button=false editable=false}}
				</div>
			{{/if}}
		</div>
	</section>
</form>