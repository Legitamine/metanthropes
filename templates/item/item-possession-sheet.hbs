<form class="{{cssClass}}" autocomplete="off">
	<header class="sheet-header">
		<img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
		<div class="header-fields">
			<h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Possession Name" /></h1>
			<div class="grid grid-2col">
				<div class="resource">
					<label class="resource-label">ðŸŽ²:</label>
					<input type="text" name="system.StatRolled.value" value="{{system.StatRolled.value}}" data-dtype="String" />
				</div>
				<div class="resource">
					<label class="resource-label">Category:</label>
					<input type="text" name="system.Category.value" value="{{system.Category.value}}" data-dtype="String" />
				</div>
			</div>
		</div>
	</header>

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="description">Description</a>
		<a class="item" data-tab="material">Material Properties</a>
	</nav>

	{{!-- Sheet Body --}}
	<section class="sheet-body">

		{{!-- Description Tab --}}
		<div class="tab" data-group="primary" data-tab="description">
			{{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the rollData prop. --}}
			{{editor system.Description.value target="system.Description.value" rollData=rollData button=true owner=owner editable=editable}}
		</div>

		{{!-- Material Properties Tab --}}
		<div class="tab material" data-group="primary" data-tab="material">
			{{!-- As you add new fields, add them in here! --}}
			{{#each system.Material}}
			<div class="resource">
				<label class="resource-label">{{this.label}}:</label>
				<input type="{{this.type}}" name="system.Material.{{@key}}.value" value="{{this.value}}" data-dtype="{{this.dtype}}" />
			</div>
			{{/each}}
		</div>
	</section>
</form>