<form class="metanthropes {{cssClass}}" autocomplete="off">
	<header class="sheet-header">
		{{#if isGM}}
			<img class="possession-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" style="border:none" />
		{{else}}
			<img class="possession-img" src="{{item.img}}" title="{{item.name}}" style="border:none" />
		{{/if}}
		<div class="header-fields">
			<h1 class="charname">
				{{#if isGM}}
					<input name="name" type="text" value="{{item.name}}" placeholder="Possession Name" />
				{{else}}
					{{item.name}}
				{{/if}}
			</h1>
			<div class="grid grid-2col">
				<div class="resource">
					<label class="resource-label" title="Which Stat is rolled when Using this Possession">ðŸŽ²
						Stat:</label>
					{{#if isGM}}
						<select name="system.Execution.StatRolled.value">
							{{#each system.Execution.StatRolled.options as |option|}}
								<option value="{{option}}"
									{{#if (eq option ../system.Execution.StatRolled.value)}}selected{{/if}}>{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						<span class="item-statroll style-pos-rolls" data-roll-type="Possession"
							data-item-name="{{item.name}}" data-stat="{{item.system.Execution.StatRolled.value}}"
							data-required-perk="{{item.system.RequiredPerk.value}}"
							data-required-perk-level="{{item.system.RequiredPerkLevel.value}}">
							{{item.system.Execution.StatRolled.value}}
							{{lookup ../system.RollStats item.system.Execution.StatRolled.value}}
						</span>
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="The Category of the Possession">Category:</label>
					{{#if isGM}}
						<select name="system.Category.value">
							{{#each system.Category.options as |option|}}
								<option value="{{option}}" {{#if (eq option ../system.Category.value)}}selected{{/if}}>
									{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						{{system.Category.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="The Attack Type of the Possession">Attack Type:</label>
					{{#if isGM}}
						<select name="system.AttackType.value">
							{{#each system.AttackType.options as |option|}}
								<option value="{{option}}"
									{{#if (eq option ../system.AttackType.value)}}selected{{/if}}>{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						{{system.AttackType.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label"
						title="How many of this Possession you have with you">Quantity:</label>
					{{#if isGM}}
						<input type="number" name="system.Quantity.value" value="{{system.Quantity.value}}"
							data-dtype="Number" />
					{{else}}
						{{system.Quantity.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="Which Perk is required to use this Possession">Required ðŸ“š
						Perk:</label>
					{{#if isGM}}
						<select name="system.RequiredPerk.value">
							{{#each system.RequiredPerk.options as |option|}}
								<option value="{{option}}"
									{{#if (eq option ../system.RequiredPerk.value)}}selected{{/if}}>{{option}}
								</option>
							{{/each}}
						</select>
					{{else}}
						{{system.RequiredPerk.value}}
					{{/if}}
				</div>
				<div class="resource">
					<label class="resource-label" title="What Perk Level is required to use this Possession">Required ðŸ“š
						Perk Level:</label>
					{{#if isGM}}
						<input type="number" name="system.RequiredPerkLevel.value"
							value="{{system.RequiredPerkLevel.value}}" data-dtype="Number" />
					{{else}}
						{{system.RequiredPerkLevel.value}}
					{{/if}}
				</div>
			</div>
		</div>
	</header>
	{{!-- Sheet Tab Navigation --}}
	<div class="layout-container-nav style-container-nav">
		<nav class="style-container-nav-children itemnavselector tabs" data-group="primary">
			<a class="item style-cs-labels" data-tab="description">Description</a>
			{{#if isGM}}
				<a class="item style-cs-labels" data-tab="material" title="Material Properties">ðŸ§± Properties</a>
			{{/if}}
			<a class="item style-cs-labels" data-tab="execution">Usage</a>
			<a class="item style-cs-labels" data-tab="effects">Effects</a>
			{{#if isGM}}
				<a class="item style-cs-labels" data-tab="results">Results</a>
			{{/if}}
		</nav>
	</div>
	{{!-- Sheet Body --}}
	<section class="itemnavtabs">
		{{!-- Description Tab --}}
		{{> "systems/metanthropes-system/templates/helpers/item-description.hbs"}}
		{{!-- Usage Tab --}}
		{{> "systems/metanthropes-system/templates/helpers/item-execution.hbs"}}
		{{!-- Material Properties Tab --}}
		<div class="tab material" data-group="primary" data-tab="material">
			{{#each system.Material}}
				<div class="resource">
					<label class="resource-label">{{this.label}}:</label>
					<input type="{{this.type}}" name="system.Material.{{@key}}.value" value="{{this.value}}"
						data-dtype="{{this.dtype}}" />
				</div>
			{{/each}}
		</div>
		{{!-- Effects Tab --}}
		{{> "systems/metanthropes-system/templates/helpers/item-effects.hbs"}}
		{{!-- Results Tab --}}
		<div class="tab results" data-group="primary" data-tab="results">
			<div>
				<div>{{system.ResultDescription.label}}:<br></div>
				{{#if isGM}}
					<div class="layout-editor">
						{{editor system.ResultDescription.value target="system.ResultDescription.value" button=true editable=true}}
					</div>
				{{else}}
					<div class="layout-editor">
						{{editor system.ResultDescription.value target="system.ResultDescription.value" button=false editable=false}}
					</div>
				{{/if}}
			</div>
			{{#each system.Results}}
				<div class="resource">
					<label class="resource-label">{{this.label}}:</label>
					<input type="{{this.type}}" name="system.Results.{{@key}}.value" value="{{this.value}}"
						data-dtype="{{this.dtype}}" />
				</div>
			{{/each}}
		</div>
	</section>
</form>